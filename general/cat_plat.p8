function _init ()
	p={ x=63, y=63, spd=1 }
end

function _update ()
	if btn(0) then p.x = p.x-p.spd
 elseif btn(1) then p.x = p.x+p.spd
--	elseif btn(2) then p.y=p.y-p.spd
--	elseif btn(3) then p.y=p.y+p.spd
	end
end

function _draw ()
	cls(1)
	print(p.x.." "..p.y, 1,1)
	spr(1, p.x,p.y, 2, 2)
end

